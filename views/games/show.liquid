{% layout 'layout.liquid' %}
{% block content %}
    <div class="container-md">
        <article>
            <h2>{{game.name}}</h2>
            <h4>
                {% if game.freeToPlay %}
                    Ready to download
                {% else %}
                    Payment required
                {% endif %}
            </h4>
            <h4>the genre of this game is {{game.genre}}</h4>
            {% if game.owner == userId %}
            <div class="btn-group">
                {%- comment -%} first button will send us to the edit page {%- endcomment -%}
                <a class="btn btn-primary" href="/games/edit/{{game.id}}">Edit</a>
                {%- comment -%} second button will send a DELETE request {%- endcomment -%}
                <form action="/games/{{game.id}}?_method=DELETE" method="POST">
                    <input class="btn btn-danger" type="submit" value="Delete">
                </form>
            </div>
            {% endif %}
        </article>
    </div>
{% endblock %}