{% layout 'layout.liquid' %}
{% block content %}

    <div class="container-sm">
        <form action="/games" method="POST">
            <fieldset>
                <legend>Create New Game</legend>
                <label class="form-label">Name: </label>
                <input
                    class="form-control"
                    type="text"
                    name="name"
                    placeholder="enter the name of the game"
                >
                <label class="form-label">Genre: </label>
                <input
                    class="form-control"
                    type="text"
                    name="text"
                    placeholder="what genre is the game?"
                >
                <label class="form-label">Free To Play: </label>
                <input
                    class="form-check-input"
                    type="checkbox"
                    name="freeToPlay"
                >
            </fieldset>
            <input
                class="btn btn-success"
                type="submit"
                value="Create New Game"
            >
        </form>
    </div>

{% endblock %}